@model Project_MVC.ModelView.CustomerViewModel
@using Project_MVC.Models;
@using Project_MVC.ModelView;

@{
    ViewBag.title = "View_Customers";
   
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>View_Customers</title>
</head>

<body>
    <div>
        <p>See Current Customers:</p>
        <div id="status"></div>

        <table id="proTable">

            <tr>
                <td> CustNum  </td>
                <td> UserName  </td>
            
            </tr>

        </table>

        <script language="javascript">
            $("#status").text("Loading...");
            $.get("View_Customers_Jason", null, BindData);
            function BindData(Customers) {
                var tbl = $("#proTable");
                for (k = 0; k < Customers.length; k++) {
                    var newRow = "<tr>" +
                        "<td>" + Customers[k].CustNum + "</td>" +
                        "<td>" + Customers[k].UserName + "</td>" +
                        "</tr>"
                    tbl.append(newRow);
                }
                $("#status").text(" ");
            }

        </script>
        @*<div class="btn btn-default">@Html.ActionLink("View Products", "View_Products", "Login")</div>*@
    </div>

    <div class="btn btn-default">@Html.ActionLink("Back", "Enter_Mng", "LoginMng")</div>
</body>



